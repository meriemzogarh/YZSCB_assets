# Environment Configuration Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/yazaki_chatbot

# CORS Configuration
CORS_ORIGIN=http://localhost:7860

# Email Configuration (for session timeout notifications and summaries)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=meriemzogarh@gmail.com
MAIL_PASS=hafsa0011
MAIL_FROM="Yazaki Chatbot" <noreply@yazaki.com>
ADMIN_EMAIL=meriemzogarh@gmail.com

# Session Configuration
SESSION_TIMEOUT_MINUTES=2
SESSION_MONITOR_INTERVAL_SECONDS=60

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/backend.log

# Security
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRE=24h

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SESSION_MONITORING=true
